<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="com.plugin.instacapture"
        version="0.0.1">

  <name>InstaCapture</name>
  <description>A Cordova plugin for instacapture library</description>

  <engines>
    <engine name="cordova" version=">=6.4.0" />
  </engines>

  <js-module src="www/insta-capture.js" name="InstaCapture">
    <clobbers target="InstaCapture" />
  </js-module>

  <!-- android -->
  <platform name="android">
    <config-file target="AndroidManifest.xml" parent="/manifest">
        <uses-permission android:name="android.permission.CAMERA" />
        <meta-data 
        android:name="com.google.android.geo.API_KEY"
        android:value="AIzaSyACOgkkILLrGAmIpv_EPsv-6q2ZJ4cVL08"/>
    </config-file>

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="InstaCapturePlugin">
        <param name="android-package" value="com.plugin.instacapture.InstaCapturePlugin" />
      </feature>
      <feature name="InstaCapture">
        <param name="android-package" value="com.plugin.instacapture.InstaCapture" />
      </feature>
    </config-file>
    <source-file src="src/android/InstaCapturePlugin.java" target-dir="src/com/plugin/instacapture" />
    <source-file src="src/android/InstaCapture.java" target-dir="src/com/plugin/instacapture" />
    <source-file src="src/android/ActivityReferenceManager.java" target-dir="src/com/plugin/instacapture" />
    <source-file src="src/android/InstaCaptureConfiguration.java" target-dir="src/com/plugin/instacapture" />

    <source-file src="src/android/exception/ActivityNotRunningException.java" target-dir="src/com/plugin/instacapture/exception" />
    <source-file src="src/android/exception/IllegalScreenSizeException.java" target-dir="src/com/plugin/instacapture/exception" />
    <source-file src="src/android/exception/ScreenCapturingFailedException.java" target-dir="src/com/plugin/instacapture/exception" />

    <source-file src="src/android/listener/ScreenCaptureListener.java" target-dir="src/com/plugin/instacapture/listener" />
    <source-file src="src/android/listener/SimpleScreenCapturingListener.java" target-dir="src/com/plugin/instacapture/listener" />

    <source-file src="src/android/screenshot/FieldHelper.java" target-dir="src/com/plugin/instacapture/screenshot" />
    <source-file src="src/android/screenshot/RootViewInfo.java" target-dir="src/com/plugin/instacapture/screenshot" />
    <source-file src="src/android/screenshot/ScreenshotProvider.java" target-dir="src/com/plugin/instacapture/screenshot" />
    <source-file src="src/android/screenshot/ScreenshotTaker.java" target-dir="src/com/plugin/instacapture/screenshot" />
    <source-file src="src/android/screenshot/ViewsBitmapObservable.java" target-dir="src/com/plugin/instacapture/screenshot" />

    <source-file src="src/android/utility/Logger.java" target-dir="src/com/plugin/instacapture/utility" />

    <source-file src="src/android/libraries/rxjava-1.2.5.jar" target-dir="libs" />
    <source-file src="src/android/libraries/rxandroid-0.25.0.jar" target-dir="libs" />
    <source-file src="src/android/libraries/support-annotations-25.1.0.jar" target-dir="libs" />
  </platform>

</plugin>